{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"allowUnreachableCode": false,
		"allowUnusedLabels": false,
		"alwaysStrict": true,
		"exactOptionalPropertyTypes": false,
		"forceConsistentCasingInFileNames": true,
		"incremental": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": true,
		"noImplicitOverride": true,
		"noUncheckedIndexedAccess": false,
		"noUncheckedSideEffectImports": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
			"~/workers/*": ["./workers/*"],
			"~/modules/*": ["./modules/*"],
			"~/common/*": ["./common/*"]
		},
		"removeComments": true,
		"skipLibCheck": true,
		"strict": true,
		"strictNullChecks": true,
		"types": ["jest", "node"]
	},
	"extends": "expo/tsconfig.base",
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"app.config.ts",
		"expo-env.d.ts",
		"src/**/*.d.ts",
		"modules/**/*.ts",
		"common/**/*.ts",
		"workers/**/*.ts",
		"prisma.config.ts",
		"eslint.config.mjs",
		"vitest.config.mts",
		".expo/types/**/*.ts",
		"worker-configuration.d.ts"
	],
	"files": ["src/index.ts", "workers/index.ts"]
}
