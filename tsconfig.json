{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"allowUnreachableCode": false,
		"alwaysStrict": true,
		"incremental": true,
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"paths": {
			"*": ["./*"],
			"@/*": ["./src/*"],
			"~common/*": ["./common/*"],
			"~workers/*": ["./apps/workers/*"]
		},
		"removeComments": true,
		"skipLibCheck": true,
		"strict": true,
		"strictNullChecks": true,
		"types": ["jest", "node"]
	},
	"extends": "expo/tsconfig.base",
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"app.config.ts",
		"drizzle.config.ts",
		"expo-env.d.ts",
		"src/**/*.d.ts",
		"common/**/*.ts",
		"apps/workers/**/*.ts",
		"prisma.config.ts",
		"eslint.config.mjs",
		"vitest.config.mts",
		".expo/types/**/*.ts",
		"worker-configuration.d.ts"
	],
	"files": ["src/index.ts", "apps/workers/index.ts"]
}
