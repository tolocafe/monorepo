{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"allowUnreachableCode": false,
		"alwaysStrict": true,
		"incremental": true,
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
			"@common/*": ["./common/*"]
		},
		"removeComments": true,
		"skipLibCheck": true,
		"strict": true,
		"strictNullChecks": true,
		"types": ["jest", "node"]
	},
	"extends": "expo/tsconfig.base",
	"include": [
		"src/**/*.ts",
		"src/**/*.d.ts",
		"src/**/*.tsx",
		"common/**/*.ts",
		"workers/**/*.ts",
		"app.config.ts",
		".expo/types/**/*.ts",
		"expo-env.d.ts",
		"eslint.config.mjs",
		"vitest.config.mts",
		"worker-configuration.d.ts"
	]
}
