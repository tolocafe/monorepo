{
	"$schema": "https://raw.githubusercontent.com/oxc-project/oxlint/main/npm/oxlint/configuration_schema.json",
	"categories": {
		"correctness": "warn",
		"nursery": "warn",
		"pedantic": "off",
		"restriction": "warn",
		"style": "warn",
		"suspicious": "warn"
	},
	"env": {
		"browser": true,
		"node": true,
		"shared-node-browser": true
	},
	"globals": {
		"jest": "readonly"
	},
	"plugins": ["eslint", "unicorn", "import", "jsdoc", "promise"],
	"rules": {
		"capitalized-comments": "off",
		"complexity": "off",
		"consistent-type-imports": ["warn", { "prefer": "type-imports" }],
		"no-undef": "off",
		"curly": "off",
		"eqeqeq": ["warn", "smart"],
		"func-style": "off",
		"group-exports": "off",
		"id-length": "off",
		"import/consistent-type-specifier-style": ["warn", "prefer-top-level"],
		"import/export": "off",
		"import/exports-last": "off",
		"consistent-type-definitions": ["warn", "type"],
		"explicit-function-return-type": "off",
		"explicit-module-boundary-types": "off",
		"import/group-exports": "off",
		"import/max-dependencies": "off",
		"no-optional-chaining": "off",
		"no-rest-spread-properties": "off",
		"import/no-cycle": "off",
		"import/no-default-export": "off",
		"import/no-duplicates": "warn",
		"import/no-named-as-default": "off",
		"import/no-named-as-default-member": "off",
		"import/no-named-export": "off",
		"import/no-namespace": "off",
		"import/no-self-import": "error",
		"import/no-unassigned-import": "off",
		"import/unambiguous": "off",
		"init-declarations": "off",
		"jsdoc/require-param": "off",
		"jsdoc/require-param-type": "off",
		"jsdoc/require-returns": "off",
		"jsdoc/require-returns-type": "off",
		"max-lines": "off",
		"max-lines-per-function": "off",
		"max-params": "off",
		"max-statements": "off",
		"new-cap": "off",
		"no-async-await": "off",
		"no-console": "warn",
		"no-continue": "off",
		"no-debugger": "error",
		"no-duplicate-imports": "off",
		"no-empty": "error",
		"no-extra-boolean-cast": "error",
		"no-inline-comments": "off",
		"no-loss-of-precision": "error",
		"no-magic-numbers": "off",
		"no-negated-condition": "off",
		"no-nested-ternary": "off",
		"no-ternary": "off",
		"no-undefined": "off",
		"no-unreachable": "error",
		"no-unsafe-negation": "error",
		"no-unused-vars": "error",
		"no-void": "off",
		"no-warning-comments": "off",
		"prefer-default-export": "off",
		"promise/avoid-new": "off",
		"promise/prefer-await-to-callbacks": "off",
		"promise/prefer-await-to-then": "off",
		"sort-imports": "off",
		"unicorn/consistent-function-scoping": "off",
		"unicorn/filename-case": "off",
		"unicorn/no-array-for-each": "off",
		"unicorn/no-array-reduce": "off",
		"unicorn/no-nested-ternary": "off",
		"unicorn/no-null": "off",
		"unicorn/prefer-module": "off",
		"unicorn/prefer-object-from-entries": "off",
		"unicorn/prefer-query-selector": "off",
		"unicorn/prefer-top-level-await": "off",
		"unicorn/prevent-abbreviations": "off",
		"use-isnan": "error",
		"valid-typeof": "error"
	},
	"ignorePatterns": ["node_modules", "dist", "build", "coverage"]
}
