{
	"$schema": "https://raw.githubusercontent.com/nicolo-ribaudo/oxfmt/main/npm/oxfmt/configuration_schema.json",
	"arrowParens": "always",
	"experimentalSortImports": {
		"groups": [
			["value-builtin", "type-builtin"],
			["value-external", "type-external"],
			["value-internal", "type-internal"],
			["value-parent", "type-parent"],
			["value-sibling", "value-index", "type-sibling", "type-index"],
			["type-import", "ts-equals-import"],
			["unknown"]
		],
		"internalPattern": ["~/"],
		"newlinesBetween": true,
		"order": "asc"
	},
	"jsxSingleQuote": false,
	"printWidth": 80,
	"semi": false,
	"singleQuote": true,
	"trailingComma": "all",
	"useTabs": true,
	"yaml": {
		"singleQuote": true
	}
}
